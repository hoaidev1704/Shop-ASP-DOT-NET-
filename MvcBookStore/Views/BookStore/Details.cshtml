<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: #82cd47;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
        margin-bottom: 40px;
        margin-right: 375px;
        padding-bottom: 37px;
    }
    #Datmua a:hover{
        background-color:#82cd47;
        color:white;
    }
   
</style>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h3>Thông tin chi tiết sản phẩm  </h3>
<div>
    <div style="width:40%; float:left; border-left:dotted 1px; border-color:azure">
        <img alt="@Model.Tensach" src="~/HinhSanPham/@Model.Anhbia" width="100%" />
    </div>
    <div style="width:60%; float:left; padding:10px">
        <h4 style="font-weight:bold; color:#82cd47"> @Model.Tensach</h4>
        <p style="text-align:justify"><span style="font-weight:bold">Mô tả: </span>@Model.Mota</p>
        <p style="font-weight:bold">Giá bán: <span style="color:red; font-size:16px"> @Model.Giaban VNĐ</span></p>
    </div>
    <div>
        <div id="Datmua">
            <a href="@Url.Action("ThemGiohang", "GioHang", new { @iMasach = @Model.Masach, @strURL = Request.Url.ToString() })" 
               class="list-group-item buttonadd">ĐẶT MUA</a>
        </div>
    </div>
</div>