
@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
    <meta charset="UTF-8">
    <title>Đăng nhập/Đăng ký</title>

  
    <link rel="stylesheet" href="~/Assets/bootstrap/css/bootstrap.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/fontawesome-free-6.2.0-web/css/all.min.css">
    <link rel="stylesheet" href="~/Assets/website/css/style.css" type="text/css">
    <link rel="stylesheet" href="~/Assets/website/css/login.css">
</head>
<body id="abc">
    <div class="main">
        <div class="container a-container" id="a-container">
            <form class="form" id="a-form" method="post" action="/SignUp">
                <h2 class="form_title title">Tạo tài khoản</h2>
                <div class="form__icons">
                    <img class="form__icon"
                         src="data:image/svg+xml;base64,"
                         alt="">
                </div>
                <span class="form__span">hoặc dùng email để đăng ký</span>
                <input class="form__input" type="text" name="signUpName" placeholder="Tên người dùng">
                <input class="form__input" type="email" name="signUpEmail" placeholder="Email">
                <input class="form__input" type="password" name="signUpPass" placeholder="Mật khẩu">
                <input class="form__input" type="password" name="checkPass" placeholder="Nhập lại mật khẩu">
                <input type="submit" class="button" value="ĐĂNG KÝ">
            </form>
        </div>
        <div class="container b-container" id="b-container">
            <form class="form" id="b-form" method="" action="">
                <h2 class="form_title title">Đăng nhập</h2>
                <div class="form__icons">
                    <img class="form__icon"
                         src="data:image/svg+xml;base64,"
                         alt="">
                </div>
                <span class="form__span">hoặc dùng tài khoản email</span>
                <input class="form__input" type="email" placeholder="Email">
                <input class="form__input" type="password" placeholder="Mật khẩu">
                <a href="forgetpass" class="form__link">Quên mật khẩu?</a>
                <input type="submit" class="form__button button submit user-link" value="ĐĂNG NHẬP">
            </form>
        </div>
        <div class="switch" id="switch-cnt">
            <div class="switch__circle"></div>
            <div class="switch__circle switch__circle--t"></div>
            <div class="switch__container" id="switch-c1">
                <h2 class="switch__title title">CHÀO MỪNG BẠN TRỞ LẠI !</h2>
                <p class="switch__description description">
                    Để tiếp tục sử dụng dịch vụ, hãy đăng nhập vào tài khoản của
                    bạn
                </p>
                <button class="switch__button button switch-btn">ĐĂNG NHẬP</button>
            </div>
            <div class="switch__container is-hidden" id="switch-c2">
                <h2 class="switch__title title">CHÀO BẠN !</h2>
                <p class="switch__description description">Nhập thông tin của bạn và cùng đồng hành với chúng tôi</p>
                <button class="switch__button button switch-btn">ĐĂNG KÝ</button>
            </div>
        </div>
    </div>
    <script src="~/Assets/bootstrap/js/jquery.min.js"></script>
    <script src="~/Assets/bootstrap/js/bootstrap.js"></script>
    <script src="~/Assets/website/js/main.js"></script>
    <script src="~/Assets/website/js/login.js"></script>
</body>
</html>
